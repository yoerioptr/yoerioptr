{% if page.navigation %}
  <div class="layout-navigation">
    {{ page.navigation }}
  </div>
{% endif %}

<div class="layout-container">
  {% if page.messages %}
    <aside class="layout-messages">
      {{ page.messages }}
    </aside>
  {% endif %}

  <header role="banner">
    {{ page.header }}
  </header>

  <main role="main">
    <a id="main-content" tabindex="-1"></a>

    <div class="layout-content">
      {{ page.content }}
    </div>

  </main>

  {% if page.footer %}
    <footer role="contentinfo">
      {{ page.footer }}
    </footer>
  {% endif %}

</div>
